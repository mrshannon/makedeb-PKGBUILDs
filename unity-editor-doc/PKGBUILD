# Maintainer: Michael R. Shannon <mrshannon.aerospace@gmail.com>
# Contributor: Oscar Morante <spacepluk at gmail dot com>

# Unity for Linux release thread:
# https://forum.unity.com/threads/unity-on-linux-release-notes-and-known-issues.350256/

_majorversion=2018.2
_version="${_majorversion}.7"
_build=f1
_randomstring=4ebd28dd9664
_prefix=/opt/unity

pkgname=unity-editor-doc
pkgver=${_version}${_build}
pkgrel=1
section='devel'
pkgdesc="Unity3D game engine and editor (documentation)."
read -r -d '' pkglong <<"EOF"
Unity User Manual and Scripting API Reference.
EOF
arch=('amd64')
url='https://unity3d.com/'
license=('custom')
makedepends=('libcanberra-gtk-module')
depends=('unity-editor')
source=("https://docs.unity3d.com/${_majorversion}/Documentation/uploads/UnityDocumentation.zip")
sha1sums=('7005aa2ecc933a7cbccd4477837f7755bf37d045')

package() {
    install -dm755 "${pkgdir}/${_prefix}/Editor/Data/Documentation"
    tar -C "${srcdir}/Documentation" -cf - \
        . | tar -C "${pkgdir}/${_prefix}/Editor/Data/Documentation" -xf -
}
